        </profile>
        <profile>
            <id>iphone-device</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo.javascript</groupId>
                        <artifactId>javascript-maven-plugin</artifactId>
                        <version>1.1-softec</version>
                        <extensions>true</extensions>
                        <configuration>
                            <!-- none, virtual, device -->
                            <executeMode>device</executeMode>
                            <platform>iphone</platform>
